<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.energize">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Energize">
        <activity android:name="com.holdmyhand.energize.ThemeSolar" />
        <activity android:name="com.holdmyhand.energize.ThemeGeo" />
        <activity android:name="com.holdmyhand.energize.ThemeHydro" />
        <activity android:name=".ThemeWind" />
        <activity android:name="com.holdmyhand.energize.ResultScreen" />
        <activity android:name="com.holdmyhand.energize.SelectAvatar" />
        <activity android:name="com.holdmyhand.energize.ThemeSelection" />
        <activity android:name="com.holdmyhand.energize.LanguageSelection" />
        <activity android:name="com.holdmyhand.energize.AccountDetails" />
        <activity
            android:name="com.holdmyhand.energize.SelectAvatar_Dialog"
            android:screenOrientation="portrait"
            android:theme="@style/popupTheme" />
        <activity
            android:name="com.holdmyhand.energize.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.holdmyhand.energize.MainActivity" />
    </application>

</manifest>