<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">#3A5901</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Title(Bold) Font Style -->
    <style name="Text.TitleStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Context(Regular) Font Style -->
    <style name="Text.ContextStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- select avatar dialog style -->
    <style name="popupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- remove title bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>