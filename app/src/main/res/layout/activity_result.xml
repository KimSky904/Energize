<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="188dp"
        android:text="Your Results"
        android:textColor="@color/white"
        style="@style/Text.TitleStyle"/>

    <TextView
        android:id="@+id/SubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainText"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:text="Below is a summary of how you performed!"
        android:textColor="#CDCDCD"
        style="@style/Text.ContextStyle"/>

    <ImageButton
        android:id="@+id/go_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="311dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/round_btn_style" />

    <RelativeLayout
        android:id="@+id/bottom_page"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_page_style"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/btn_get_points"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_btn_style"
            android:backgroundTint="#CC507B00"
            android:text="86 out 100 Points"
            android:textSize="12sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btn_done"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editTxt_userName"
            android:layout_marginTop="294dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_btn_style"
            android:text="DONE â†’"
            style="@style/Text.TitleStyle"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </RelativeLayout>



</RelativeLayout>